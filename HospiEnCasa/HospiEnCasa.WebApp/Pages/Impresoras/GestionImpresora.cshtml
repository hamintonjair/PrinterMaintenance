@page
@model HospiEnCasa.WebApp.Pages.Impresoras.GestionImpresora
@{
    
    ViewData["Title"] = "Gestionar Impresoras";
}

<h1>@ViewData["Title"]</h1>

<div class="row m-4" style="padding-top: 10px;">
    <div class="col-sm-12">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#FormModal">Impresora</button>
          <a class="btn btn-primary" asp-page="/Impresoras/Tipo_Impresora">ir a Tipo de impresoras</a>
    </div>
  
</div>

<div id="container" class="container">
    <div margin:0 class="col-md-12">
           <table id="customerDatatable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Marca</th>
                        @* <th>Tipo imp.</th> *@
                        <th>Fecha mantenimiento</th>
                        <th>Placa</th>                                                              
                        <th>Detalles</th>                        
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var _impresoras in Model.listadoImpresora)
                {
                    <tr>
                        <td scope="row">@_impresoras.id</td>
                        <td>@_impresoras.nombre</td>         
                        <td>@_impresoras.marca</td>       
                        @* <td>@_impresoras.tipo_Impresora</td>        *@
                        <td>@_impresoras.fecha_mantenimiento</td>       
                        <td>@_impresoras.detalles</td>                                                      
                        <td>
                            <a asp-controller="Registro" asp-action="Edit" asp-route-id="1" class="btn btn-info">Editar</a>                      
                            <a asp-controller="Registro" asp-action="Delete" asp-route-id="1"
                            class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }                   
                </tbody>
            </table>
    </div>
</div>


<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header " style="background-color:#2668AC ;" >
                <h5 class="modal-title" id="exampleModalLabel">Nuevo Registro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <p class="text-primary">
                        Los campos con asterisco (<font color="red">*</font>) son obligatorios.
                    </p>
                  <div class="form-row" style="padding-top:14px;">
                        <div class="form-group col-md-4">
                            <label>Impresora (<font color="red">*</font>)</label>
                            <input type="text" class="form-control" placeholder="Nombre Impresora">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Marca (<font color="red">*</font>)</label>
                            <input type="text" class="form-control" placeholder="Marca">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Tipo Impresora (<font color="red">*</font>)</label>
                            <select type="text" class="form-control">
                                <option value="" selected="selected">Seleccionar..</option>
                                 @foreach (var tipo in Model.listadoTipoImpresora)
                                {
                                    <option value="">@tipo.nombre_impresora</option>
                                }
                            </select>
                        </div>
                    </div>
                     <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Placa (<font color="red">*</font>)</label>
                            <input type="text" class="form-control" placeholder="Placa">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Fecha de mantenimiento (<font color="red">*</font>)</label>
                            <input type="text" class="form-control" type="date" id="start" name="trip-start" value=""   min="10" max="10" placeholder="01-02-2017" required="">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Año modelo</label>
                            <input type="text" class="form-control" placeholder="Año Modelo"   min="10" max="10" placeholder="01-02-2017">
                        </div>
                    </div>
                     <div class="form-row">
                        <div class="form-group col-md-4">
                            <label>Velocidad Impresión</label>
                            <input type="text" class="form-control" placeholder="velocidad Impresión">
                        </div>
                        <div class="form-group col-md-4">
                            <label>Volumen Impresión </label>
                            <input type="text" class="form-control" placeholder="volumen Impresión">
                        </div>
                        <div class="form-group col-md-4">
                            <label>País</label>
                            <input type="text" class="form-control" placeholder="pas">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <label>Detalles (<font color="red">*</font>)</label>
                            <textarea  type="text" class="form-control" placeholder="detalles"></textarea>
                        </div>
                        <div class="form-group col-md-4">
                            <label>Otras caracteristicas </label>
                            <textarea  type="text" class="form-control" placeholder="Otras caracteristicas "></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                          <button type="reset" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-success" >Guardar</button>
                   </div>
                </form>
            </div>
           
        </div>
    </div>
</div>
