@page
@model HospiEnCasa.WebApp.Pages.Repuestos.GestionRepuesto
@{
    ViewData["Title"] = "Gestione Repuestos";
}

<h1>@ViewData["Title"]</h1>


<div class="row m-4" style="padding-top: 10px;">
    <div class="col-sm-12">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#FormModal">Registrar
        </button>
    </div>
  
</div>

<div id="container" class="container">
    <div margin:0 class="col-sm-12">
        <table id="customerDatatable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Tipo de repuesto</th>
                        <th>Precio</th>                        
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>rodillo</td>
                        <td>15.000</td>              
                        <td>
                            <a asp-controller="Registro" asp-action="Edit" asp-route-id="1" class="btn btn-info">Editar</a>
                            <a asp-controller="Registro" asp-action="Delete" asp-route-id="1" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>toner</td>
                        <td>19.000</td>
                        <td>
                            <a asp-controller="Registro" asp-action="Edit" asp-route-id="1" class="btn btn-info">Editar</a>
                            <a asp-controller="Registro" asp-action="Delete" asp-route-id="1" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>disco duro</td>
                        <td>25.000</td>
                        <td>
                            <a asp-controller="Registro" asp-action="Edit" asp-route-id="1" class="btn btn-info">Editar</a>
                            <a asp-controller="Registro" asp-action="Delete" asp-route-id="1" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    <tr>
                        <td>4</td>
                        <td>revelador</td>
                        <td>150.000</td>
                        <td>
                            <a asp-controller="Registro" asp-action="Edit" asp-route-id="1" class="btn btn-info">Editar</a>
                            <a asp-controller="Registro" asp-action="Delete" asp-route-id="1" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    <tr>
                        <td>5</td>
                        <td>tinta</td>
                        <td>35.000</td>
                        <td>
                            <a asp-controller="Registro" asp-action="Edit" asp-route-id="1" class="btn btn-info">Editar</a>
                            <a asp-controller="Registro" asp-action="Delete" asp-route-id="1" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                    <tr>
                        <td>6</td>
                        <td>rodillo</td>
                        <td>15.000</td>
                        <td>
                            <a asp-controller="Registro" asp-action="Edit" asp-route-id="1" class="btn btn-info">Editar</a>
                            <a asp-controller="Registro" asp-action="Delete" asp-route-id="1" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                </tbody>
            </table>
    </div>
</div>


<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header " style="background-color:#2668AC ;" >
                <h5 class="modal-title" id="exampleModalLabel">Nuevo Registro</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <p class="text-primary">
                        Los campos con asterisco (<font color="red">*</font>) son obligatorios.
                    </p>
                    <div class="form-row" style="padding-top:14px;">

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Tipo de Repuesto (<font color="red">*</font>)</label>
                                <input type="text" class="form-control" placeholder="Tipo de Repuesto">
                            </div>
                            <div class="form-group col-md-6">
                                <label>Precio(<font color="red">*</font>)</label>
                                <input type="text" class="form-control" placeholder="Precio">
                            </div>
                        </div>
                    </div>
                        <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-success" >Guardar</button>
                    </div>         
                </form>
            </div>
           
        </div>
    </div>
</div>
