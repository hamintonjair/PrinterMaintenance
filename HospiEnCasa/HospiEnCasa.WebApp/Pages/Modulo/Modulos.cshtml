@page
@model HospiEnCasa.WebApp.Pages.Modulos.Modulos
@{
    ViewData["Title"] = "Asignar permisos a Módulos";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["mensaje"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row m-4" style="padding-top: 10px;">
    <div class="col-sm-12">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#FormModal1">Módulos</button>
        <a style="width: auto;" class="btn btn-primary" asp-page="/Personas/GestionPersona">ir a Personas</a>

    </div>
</div>


<div id="container" class="app-title">
    <div class="row">
        <div margin:0 class="col-12 table-responsive">
            <table id="customerDatatable" class="table table-striped table-bordered nowrap" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Rol</th>
                        <th>Usuario</th>
                        <th>Repuesto</th>
                        <th>Seguro</th>
                        <th>Impresora</th>
                        <th>Impresion 3D</th>
                        <th>Revisión</th>
                        <th>Finalizado</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var modulo in Model.listadoModulo)
                    {
                        <tr>
                            <td scope="row">@modulo.id</td>
                            <td>@modulo.rol.tipo_Rol</td>
                            <td>@modulo.usuario</td>
                            <td>@modulo.repuestos</td>
                            <td>@modulo.seguro</td>
                            <td>@modulo.impresora</td>
                            <td>@modulo.impresion3d</td>
                            <td>@modulo.revision</td>
                            <td>@modulo.finalizado</td>
                            <td>
                                <button asp-controller="Registro" asp-action="Edit" title="Editar" asp-route-id="1"
                                class="btn btn-info"><i class="fa-sharp fa-solid fa-pen-to-square"></i>Editar</button>
                                <button asp-controller="Registro" asp-action="Delete" title="Eliminar" asp-route-id="1"
                                class="btn btn-danger"><i class="fa-regular fa-trash-can"></i>Eliminar</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!--Registro de estudios  -->
<div class="modal fade" id="FormModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header " style="background-color:#2668AC ;">
                <h5 class="modal-title" id="exampleModalLabel">Nuevo registro - Asincación de Módulos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <p class="text-primary">
                        Los campos con asterisco (<font color="red">*</font>) son obligatorios.
                    </p>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Funcionario (<font color="red">*</font>)</label>
                            <select type="text" class="form-control" name="rol" required="">
                                <option value="" selected="selected">Seleccionar..</option>
                                @foreach (var rol in Model.listadoRol)
                                {
                                    <option value="@rol.id">@rol.tipo_Rol</option>
                                }

                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label>Módulo Usuarios(<font color="red">*</font>)</label>
                            <select type="text" class="form-control" name="usuario" required="">
                                <option value="" selected="selected">Seleccionar..</option>
                                <option value="si">Si</option>
                                <option value="no">No</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label>Módulo Seguros (<font color="red">*</font>)</label>
                            <select type="text" class="form-control" name="seguro" required="">
                                <option value="" selected="selected">Seleccionar..</option>
                                <option value="si">Si</option>
                                <option value="no">No</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Módulo Impresoras (<font color="red">*</font>)</label>
                            <select type="text" class="form-control" name="impresora" required="">
                                <option value="" selected="selected">Seleccionar..</option>
                                <option value="si">Si</option>
                                <option value="no">No</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label>Módulo Impresion 3D (<font color="red">*</font>)</label>
                            <select type="text" class="form-control" name="impresion3D" required="">
                                <option value="" selected="selected">Seleccionar..</option>
                                <option value="si">Si</option>
                                <option value="no">No</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label>Módulo Repuestos (<font color="red">*</font>)</label>
                            <select type="text" class="form-control" name="repuesto" required="">
                                <option value="" selected="selected">Seleccionar..</option>
                                <option value="si">Si</option>
                                <option value="no">No</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label>Módulo Revisión (<font color="red">*</font>)</label>
                            <select type="text" class="form-control" name="revision" required="">
                                <option value="" selected="selected">Seleccionar..</option>
                                <option value="si">Si</option>
                                <option value="no">No</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Módulo Finalizadas (<font color="red">*</font>)</label>
                            <select type="text" class="form-control" name="finalizado" required="">
                                <option value="" selected="selected">Seleccionar..</option>
                                <option value="si">Si</option>
                                <option value="no">No</option>
                            </select>
                        </div>
                        <hr>
                        <div class="modal-footer">
                            <button type="reset" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-success">Guardar</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
