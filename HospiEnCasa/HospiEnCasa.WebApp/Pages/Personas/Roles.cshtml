@page
@model HospiEnCasa.WebApp.Pages.Personas.Roles
@{
    ViewData["Title"] = "Listado de Roles";
}

<h1>@ViewData["Title"]</h1>

<div class="row m-4" style="padding-top: 10px;">
    <div class="col-sm-12">
          <a  class="btn btn-primary" asp-page="/Personas/GestionPersona">Volver a Personas</a>
         <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#FormModal2">Rol</button>
        </button>
    </div>
  
</div>

</div>

<div id="container" class="container bg-while border-secondary rounded-25">
    <div margin:0 class="col-sm-12">
        <table id="customerDatatable" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rol</th>   
                    <th>Password</th>     
                    <th>Persona</th>                
                    <th>Acci√≥n</th>
                </tr>
            </thead>
            <tbody>
             @foreach (var rol in Model.listado_Rol)
                {
                    <tr>
                        <td scope="row">@rol.id</td>
                        <td>@rol.tipo_Rol</td>
                        <td>@rol.password</td>
                        <td>@rol.persona</td>
                                         
                        <td>
                            <a asp-controller="Registro" asp-action="Edit" asp-route-id="1" class="btn btn-info">Editar</a>                        
                            <a asp-controller="Registro" asp-action="Delete" asp-route-id="1"
                            class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!--Registro de roles  -->
<div class="modal fade" id="FormModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header " style="background-color:#2668AC ;">
                <h5 class="modal-title" id="exampleModalLabel">Nuevo registro - Asignar rol</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <p class="text-primary">
                        Los campos con asterisco (<font color="red">*</font>) son obligatorios.
                    </p>
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label>Usuario (<font color="red">*</font>)</label>
                            <select name="persona" type="Persona" class="form-control" required="">
                                <option value="" selected="selected" >Seleccionar..</option>
                                 @foreach (var persona in Model.listadoPersona)
                                {
                                    <option value="@persona.id">@persona.nombre</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Rol(<font color="red">*</font>)</label>
                            <input type="text" class="form-control" placeholder="Rol"  minlength="5" maxlength="20" required="">
                        </div>
                         <div class="form-group col-md-6">
                            <label>Password(<font color="red">*</font>)</label>
                            <input type="text" class="form-control" placeholder="Password"  minlength="7" maxlength="10" required="">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="reset" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
