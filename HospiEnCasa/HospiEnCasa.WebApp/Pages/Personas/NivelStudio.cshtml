@page
@model HospiEnCasa.WebApp.Pages.Personas.NivelStudio
@{
    ViewData["Title"] = "Registro de nivel de estudios";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["mensaje"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row m-4" style="padding-top: 10px;">
    <div class="col-sm-12">
        <button style="width: auto; type="button" class="btn btn-primary" data-toggle="modal" data-target="#FormModal1">Estudio</button>
        <a style="width: auto;" class="btn btn-primary" asp-page="/Personas/GestionPersona">ir a Personas</a>

    </div>
</div>


<div id="container" class="app-title">
    <div class="row">
        <div margin:0 class="col-12 table-responsive">
            <table id="customerDatatable" class="table table-striped table-bordered nowrap" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nivel de estudios</th>
                        <th class="text-center" style="30%">Acci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var estudio in Model.listadoNivelEstudio)
                    {
                        <tr>
                            <td scope="row">@estudio.id</td>
                            <td>@estudio.estudio</td>

                            <td>
                                <button asp-controller="Registro" asp-action="Edit" title="Editar" asp-route-id="1"
                                class="btn btn-info"><i class="fa-sharp fa-solid fa-pen-to-square"></i></button>
                                <button asp-controller="Registro" asp-action="Delete" title="Eliminar" asp-route-id="1"
                                class="btn btn-danger"><i class="fa-regular fa-trash-can"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--Registro de estudios  -->
<div class="modal fade" id="FormModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header " style="background-color:#2668AC ;">
                <h5 class="modal-title" id="exampleModalLabel">Nuevo registro - Nivel de estudio</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <p class="text-primary">
                        Los campos con asterisco (<font color="red">*</font>) son obligatorios.
                    </p>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Estudio o Profesion(<font color="red">*</font>)</label>
                            <input type="text" class="form-control" id="nivelEstudio" name="nivelEstudio"
                                placeholder="Tipo de estudio" minlength="7" maxlength="30" required="">

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button style="width: auto;"  type="reset" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                        <button style="width: auto;"  type="submit" class="btn btn-success">Guardar</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
